                  <line x1="10" y1="14" x2="21" y2="3"></line>
                </svg>
              </a>
              {% endif %}
            </div>
            <p>{{ item.description | safe }}</p>
          </div>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

