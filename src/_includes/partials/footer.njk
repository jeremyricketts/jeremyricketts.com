<footer class="pt-16 pb-8" id="payment">
  <div class="max-w-7xl mx-auto px-12 sm:px-16 lg:px-24">
    <div class="footer-grid items-start">

      <!-- Menu Column -->
      <div>
        <h3 class="text-lg font-bold text-gray-900 mb-4">Menu</h3>
        <ul class="space-y-3">
          {% for item in navigation %}
          <li>
            <a href="{{ item.url }}" class="text-gray-600 hover:text-gray-900 transition-colors">
              {{ item.label }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Payment Links Column -->
      <div>
        <h3 class="text-lg font-bold text-gray-900 mb-4">Payment Links</h3>
        <ul class="space-y-3">
          {% for method in footer.payment_links %}
          <li>
            {% if method.url %}
            <a href="{{ method.url }}" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">
              {{ method.name }}
            </a>
            {% else %}
            <span class="text-gray-600">{{ method.name }}</span>
            {% if method.detail %}
            <br><span class="text-sm text-gray-400">{{ method.detail }}</span>
            {% endif %}
            {% endif %}
          </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Other Resources Column -->
      <div>
        <h3 class="text-lg font-bold text-gray-900 mb-4">Other Resources</h3>
        <ul class="space-y-3">
          <li>
            <a href="https://itsallabouthedoggo.godaddysites.com/" target="_blank" rel="noopener noreferrer" class="text-gray-600 hover:text-gray-900 transition-colors">
              Nancy the dog walker
            </a>
          </li>
        </ul>
        <a href="https://www.redcross.org/take-a-class/qrcode?certnumber=019ENB1" target="_blank" rel="noopener noreferrer" class="inline-block bg-white border border-gray-200 rounded-lg p-3 shadow-sm hover:shadow-md transition-shadow mt-4">
          <div class="flex items-center gap-2 mb-1">
            <svg class="flex-shrink-0" width="32" height="32" viewBox="0 0 100 100">
              <rect x="35" y="5" width="30" height="90" rx="4" fill="#ed1b2e"/>
              <rect x="5" y="35" width="90" height="30" rx="4" fill="#ed1b2e"/>
            </svg>
            <span class="font-bold text-sm text-gray-800">American<br>Red Cross</span>
          </div>
          <span class="text-xs text-gray-600">Dog First Aid Certified</span>
        </a>
      </div>

      <!-- Logo Column -->
      <div class="flex justify-center md:justify-end">
        <img src="/img/logo.svg" alt="Jeremy Ricketts Dog Training" style="width: 176px; height: 176px;">
      </div>

    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-6 border-t border-gray-200 flex items-center justify-between">
      <p class="text-gray-500 text-sm">{{ footer.copyright }}</p>
      <a href="https://www.linkedin.com/in/jeremyricketts" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 transition-colors">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
        </svg>
      </a>
    </div>
  </div>
</footer>
