---
layout: layouts/page.njk
---

{% set lessonWords = ["", "One", "Two", "Three", "Four", "Five", "Six", "Seven", "Eight"] %}

<!-- Lesson Header with Navigation -->
<section class="lesson-masthead">
  <div class="max-w-5xl mx-auto px-4">
    <div class="flex items-center justify-center gap-4 mb-6">
      {% if prevLesson %}
      <a href="{{ prevLesson }}" class="lesson-nav-arrow">&lsaquo;</a>
      {% endif %}
      <p class="text-white text-lg uppercase tracking-widest">Lesson {{ lessonWords[lessonNumber] }}</p>
      {% if nextLesson %}
      <a href="{{ nextLesson }}" class="lesson-nav-arrow">&rsaquo;</a>
      {% endif %}
    </div>
    <h1 class="text-4xl md:text-5xl font-bold text-white text-center">{{ title }}</h1>
  </div>
</section>

<!-- Lesson Content -->
<article class="lesson-article">
  {{ content | safe }}
</article>
